<h1>Danh sách sinh viên</h1>
			<a href="/create" class="btn btn-info">Add</a>
			<%- include('../search.ejs')%>
			<table class="table table-hover">
				<thead>
					<tr>
						<th>#</th>
						<th>Mã SV</th>
						<th>Tên</th>
						<th>Ngày Sinh</th>
						<th>Giới Tính</th>
						<th></th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% students.forEach((student, index) => {
						%><tr>
							<td>
								<%= index + 1 %>
							</td>
							<td>
								<%= student.id %>
							</td>
							<td>
								<%= student.name %>
							</td>
							<td>
								<%= format(new Date(student.birthday), 'dd/MM/yyy' ) %>
							</td>
							<td>
								<%= student.gender %>
							</td>
							<td><a class="btn btn-warning btn-sm" href="/edit/<%= student.id %>">Sửa</a></td>
							<td>
								<button type="button" data-href="/destroy/<%= student.id %>"class="btn btn-danger btn-sm destroy" data-toggle="modal" data-target="#exampleModal">
									Xóa
								</button>
							</td>
						</tr><%
					})%>
				</tbody>
			</table>
			<!-- import pagination -->
			<%- include('../pagination.ejs')%>
			<div>
				<span>Số lượng: <%=students.length%></span>
			</div>